<div class="col" >
<table class="table table-borderless">
        <thead class="listHeader">
            <tr>
                <th colspan="5"><h2 style="color: white;">@title</h2></th>
            </tr>
    </thead>
    <tbody style="background-color: white;">
        @if (events != null)
        {
            @foreach (var eventOb in events)
            {
                    if (isFutureList)
                    {
                        <EventListElement eventOb="@eventOb" OnEventDeleted="EventDeleted"></EventListElement>
                    }
                    else
                    {
                        <EventListElement eventOb="@eventOb" OnEventDeleted="EventDeleted" isPastElement="true"></EventListElement>
                    }
                    
            }
            @if (isFutureList)
                {
                    <tr>
                        <td colspan="5">
                            <NavLink class="nav-link" href="event/create">
                                <span class="oi oi-plus" aria-hidden="true"></span> LISA ÜRITUS
                            </NavLink>
                        </td>
                    </tr>
                }
        }
        else
        {
            <tr>
                <td><h3>Ühtegi üritust pole saadaval!</h3></td>
            </tr>
        }
    </tbody>
</table>
    
</div>
