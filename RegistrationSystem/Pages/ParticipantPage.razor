@page "/participant/{Id:guid}"
@using RegistrationSystem.Utils;
@using RegistrationSystemDataLayer.Interface;
@inject IParticipantService ParticipantService;
@inject NavigationManager NavigationManager
@inject ValidationUtil valUtil


<div class="container justify-content-center">
    <SubBanner Title="Osavõtja info"/>
    <div class="row justify-content-center main-row">
        <div class="col center-block">
            <EditForm Model="Participant" OnSubmit="Save">
    <tbody style="background-color: white;">
        <tr>
            <td>Nimi: </td>
            <td><InputText id="name" @bind-Value="Participant.Name" /></td>
        </tr>
         @if (!IsCompany)
        {
            <tr>
                <td>Perenimi: </td>
            <InputText id="familyName" @bind-Value="Participant.FamilyName" />
            </tr>
            <tr>
                <td>Isikukood: </td>
                <InputText id="id" @bind-Value="Participant.IdCode" />
            </tr>
        }
         @if (IsCompany)
        {
            <tr>
                <td>Ettevõtte registrikood: </td>
                <InputText id="code" @bind-Value="Participant.RegistryCode" />
            </tr>
        }
        <button class="btn-outline-danger" @onclick="BackToLanding">Tagasi</button>
        <button type="submit">Submit</button>
    </tbody>   
</EditForm>
        </div>
    </div>
    <Footer />
</div>